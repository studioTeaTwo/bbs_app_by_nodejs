extends ../layout

block body
  form(method="post")
    input(type="text" name="contribution")
    input(type="submit" value="Post!")
    table(border=1)
      - if(posts.length)
        - each post in posts
          tr
            td= post.id
            td= post.createdAt
          tr
            td(colspan=2)= post.response
      - else
        p データがありません
